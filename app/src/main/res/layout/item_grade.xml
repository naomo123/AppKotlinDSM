<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/llEstudiante"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_Student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nombre de estudiante"
                android:padding="5dp" />

            <TextView
                android:id="@+id/item_grade1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 1"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/item_grade2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 2"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/item_grade3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 3"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/item_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Promedio"
                android:gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/item_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado"
                android:gravity="center"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/design_default_color_error"
                    android:padding="5dp"/>

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:backgroundTint="@color/material_dynamic_neutral_variant50"
                    android:text="Editar" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>